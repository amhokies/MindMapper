<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--<Button-->
            <!--android:id="@+id/real_time_fragment_close"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_gravity="right|center_vertical"-->
            <!--android:background="@android:drawable/btn_dialog" />-->

        <TextView
            android:id="@+id/attentionCircle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fab_circle"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="62sp" />

        <Chronometer
            android:id="@+id/elapsedTime"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:format="[Total Time: 0:00:00]"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/attentionCircle"
            android:layout_alignLeft="@+id/attentionCircle"
            android:layout_alignStart="@+id/attentionCircle"/>

        <!-- Linear layout for start/stop/pause/resume buttons -->
        <LinearLayout
            android:id="@+id/recordingStateButtons"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@id/attentionCircle"
            android:layout_alignRight="@id/attentionCircle"
            android:layout_below="@+id/locationTextView"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#4CC94C"
                android:text="Start"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/pause"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#A6A6A6"
                android:text="Pause"
                android:visibility="gone" />

            <Button
                android:id="@+id/resume"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#4CC94C"
                android:text="Resume"
                android:visibility="gone" />

            <Button
                android:id="@+id/makeNoteButton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#ff4444"
                android:text="Make Note"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_dotted_map"
            android:gravity="center_horizontal|center_vertical"
            android:maxLength="26"
            android:text="    Location         "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <!--<Button-->
            <!--android:layout_width="175dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:text="Make Notes"-->
            <!--android:id="@+id/makeNoteButton"-->
            <!--android:layout_below="@+id/locationTextView"-->
            <!--android:layout_marginTop="80dp"-->
            <!--android:background="@color/wallet_holo_blue_light"-->
            <!--android:layout_centerHorizontal="true"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/statusTextView"
            android:text="EEG Status"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="13dp"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/statusView"

            android:background="@drawable/green_btn"
            android:layout_alignBottom="@+id/statusTextView"
            android:layout_marginRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:id="@+id/testButton"
            android:layout_below="@+id/statusTextView"
            android:layout_alignRight="@+id/statusTextView"
            android:layout_alignEnd="@+id/statusTextView"/>


    </RelativeLayout>

</LinearLayout>